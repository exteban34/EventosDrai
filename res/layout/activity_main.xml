<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounds_principal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vista.MainActivity" >

    <Button
        android:id="@+id/btnExpositores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCursos"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        android:background="@drawable/botones_app03"
        android:text="@string/nulo" />

    <Button
        android:id="@+id/btnCursos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnExpositores"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/botones_app02"
        android:text="@string/nulo" />

    <Button
        android:id="@+id/btnEventos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnExpositores"
        android:layout_alignLeft="@+id/btnCursos"
        android:layout_marginBottom="32dp"
        android:background="@drawable/botones_app01"
        android:text="@string/nulo" />

</RelativeLayout>